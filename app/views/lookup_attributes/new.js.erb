<% fields = capture do %>
  <%= simple_fields_for @vessell do |v| %>
    <%= v.simple_fields_for @lookup_attribute, :child_index => unique_child_index do |f| %>
      <% @inputs.each do |i| %>
        <%= f.input i %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

$("#{@lookup_attribute.name.plurarlize}").append('<%= escape_javascript fields %>');
