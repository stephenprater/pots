=simple_form_for @vessell, :wrapper => :bootstrap_wide do |f|

  =f.association :site, :autocomplete => 'name', :partial_wrapper => 'bootstrap_inline', :as => 'autocomplete_association'
  =f.hidden_field :id

  // unique
  =f.input :accession_number

  =f.input :form_date, :as => 'date_picker', :input_html => { :value => l(f.object.form_date, :format => :picker) }
  
  // unique
  =f.input :vessell_number

  =f.input :projects, :as => 'tag', :placeholder => 'Project Names'
  =f.input :collections, :as => 'tag', :placeholder => 'Collection Names'
  =f.input :analysts, :as => 'tag', :placeholder => 'Analyst Names'

  =f.input :feature_number
  =f.input :burial_number
  
  // textual
  =f.input :other_catalog_information, :input_html => { :rows => 2 }
  
  =f.input :unit_of_measurement, :as => 'radio_buttons', :collection => Vessell.units, :wrapper => 'bootstrap_well'
  =f.input :authenticity, :as => 'radio_buttons', :collection => Vessell.authenticity, :wrapper => 'bootstrap_well'
  =f.input :condition, :as => 'radio_buttons', :collection => Vessell.condition, :wrapper => 'bootstrap_well'
  
  // text
  =f.input :missing_portions, :input_html => { :rows => 2 }

  // text
  =f.input :use_wear

  =f.input :weight
  // unique
  =f.input :volume
  // unique
  =f.input :description, :input_html  => { :rows => 5 }
  // unique
  =f.input :comments, :input_html => { :rows => 5 }

  /go!
  =f.button :submit

